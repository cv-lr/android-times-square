<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <item app:state_range_middle="true">
    <shape>
      <solid android:color="@color/calendar_selected_range_bg"/>
      <stroke android:width="1dp" android:color="@color/calendar_bg"/>
    </shape>
  </item>
  <item android:state_selected="true">
    <shape>
      <solid android:color="@color/calendar_selected_day_bg"/>
      <stroke android:width="1dp" android:color="@color/calendar_bg"/>
    </shape>
  </item>
  <item android:state_pressed="true">
    <shape>
      <solid android:color="@color/calendar_selected_day_bg"/>
      <stroke android:width="1dp" android:color="@color/calendar_bg"/>
    </shape>
  </item>
  <item app:state_current_month="false">
      <color android:color="@color/calendar_inactive_month_bg"/>
  </item>
  <item app:state_highlighted="true">
    <shape>
      <solid android:color="@color/calendar_highlighted_day_bg"/>
      <stroke android:width="1dp" android:color="@color/calendar_bg"/>
    </shape>
  </item>
  <item app:state_today="true">
    <shape>
      <solid android:color="@color/calendar_text_active"/>
      <stroke android:width="1dp" android:color="@color/calendar_bg"/>
    </shape>
  </item>
  <item>
    <shape>
      <solid android:color="@color/calendar_active_month_bg"/>
      <stroke android:width="1dp" android:color="@color/calendar_bg"/>
    </shape>
  </item>
</selector>
